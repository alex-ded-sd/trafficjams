<script id="weatherInfoTemplate" type="text/template">
    <div class="weather-image-container">
        <img src="{{currentWeatherImageUrl}}" style="width:{{currentWeatherImageSize}}px;height:{{currentWeatherImageSize}}px;" />
    </div>
    <div class="weather-info-container">
        <div class="current-weather-info-container">
            <div class="temperature-level-container">
                <span class="temperature-level">{{currentTemperature}}&#8451;</span>
            </div>
            <div class="weather-text-info-container">
                <label class="weather-leabel">Погода: </label>
                <span class="weather-text">{{weatherText}}</span>
            </div>
        </div>
        <div class="day-weather-container">
            <hr />
            {{#nextDayParts}}
            <div class="day-part-container">
                <div class="day-part-name-container"><span class="day-part-name">{{name}}</span></div>
                <div class="day-part-image-container"><img src="{{imageSrc}}" alt="Нет изображения" /></div>
                <div class="day-part-temperature-container">
                    <span class="day-part-temperature">{{tFrom}}&#8451;/{{tTo}}&#8451;</span>
                </div>
            </div>
            {{/nextDayParts}}
        </div>
    </div>
</script>